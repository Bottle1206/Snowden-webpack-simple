@import './margin-padding.styl';

body
  margin 0
  padding 0
  font-family Chinese Quote,-apple-system,BlinkMacSystemFont,Segoe UI,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Helvetica Neue,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 12px
  color #606060
  *
    box-sizing border-box
    
.no-mac-os
  font-family "Microsoft Yahei",-apple-system,".SFNSText-Regular","Helvetica Neue","Hiragino Sans GB","WenQuanYi Micro Hei",sans-serif,Meiryo
  *::-webkit-scrollbar {  /* 滚动条整体部分 */
    width: 6px;
    height: 6px;
  }
  *::-webkit-scrollbar-track {  /* 外层轨道 */
    border-radius: 3px;
    background-color: transparent;
  }
  *::-webkit-scrollbar-track-piece {  /*内层轨道，滚动条中间部分 */
    background-color: transparent;
    border-radius: 3px;
  }
  *::-webkit-scrollbar-thumb {  /* 滑块 */
    width: 6px;
    border-radius: 3px;
    background: #C5C7CA;
  }
  *::-webkit-scrollbar-thumb:hover { /* 鼠标移入滑块 */
    background: #A5A7AA;
  }

ul, li
  padding 0
  margin 0
  list-style none

.white-card
  background-color #FFF
  padding 20px
  box-shadow 4px 4px 20px 0 rgba(0,0,0,.05)

.big-card-container
  min-height calc(100% - 35px)
  padding 20px
  margin 0 20px
  box-shadow 4px 4px 20px 0 rgba(0,0,0,.05)
  background-color #FFF

.md-box-shadow // Material Design & md-size
  box-shadow 0 2px 1px -1px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 1px 3px 0 rgba(0,0,0,.12)
.xs-box-shadow
  box-shadow 0 2px 1px -1px rgba(0,0,0,.15), 0 1px 1px 0 rgba(0,0,0,.09), 0 1px 3px 0 rgba(0,0,0,.07)

.cursor-pointer
  cursor pointer

.text-center
  text-align center
.text-right
  text-align right
.text-left
  text-align left

.float-right
  float right
.float-left
  float left

.color-warning
  color #E6A23C !important
.color-primary
  color #409EFF !important
.color-success
  color #67C23A !important
.color-danger
  color #F56C6C !important
.color-gray
  color #909399 !important

span.pointer
  position relative
  padding-left 12px
  white-space nowrap
  &:before
    position absolute
    content ''
    display inline-block
    width 6px
    height 6px
    border-radius 3px
    top 50%
    margin-top -3px
    left 0

// .pointer-info:before
//   background-color #00bcd4
.pointer-warning:before
  background-color #E6A23C
.pointer-primary:before
  background-color #409EFF
.pointer-success:before
  background-color #67C23A
.pointer-danger:before
  background-color #F56C6C
.pointer-gray:before
  background-color #909399

.pointer-doing:after
  background-color #409EFF
  animation antStatusProcessing 1.2s ease-in-out infinite

.white-card
  background-color #FFF
  padding 20px
  box-shadow 4px 4px 20px 0 rgba(0,0,0,.05)

button, a
  outline none
  cursor pointer

.flex
  display flex
.flex-wrap
  display flex
  flex-wrap wrap
.flex-between
  display flex
  justify-content space-between

.text-ellipsis-2
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical

.text-ellipsis-3
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 3
  -webkit-box-orient vertical
 
